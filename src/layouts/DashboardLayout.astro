---
import BaseLayout from './BaseLayout.astro';
import { verificarAutenticacion } from '../lib/auth-helper';

interface Props {
  title?: string;
}

const { title } = Astro.props;

// Verificar autenticaci칩n - Redirige a /login si no est치 autenticado
const redirectResponse = await verificarAutenticacion(Astro);
if (redirectResponse) {
  return redirectResponse;
}

// Obtener usuario actual de Supabase
import { obtenerUsuarioActual } from '../lib/supabase';
const usuario = await obtenerUsuarioActual();
---

<BaseLayout title={title}>
  <!-- Sidebar -->
  <div class="flex h-screen bg-gray-100">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg">
      <div class="p-6">
        <!-- Logo -->
        <div class="flex items-center gap-3 mb-8">
          <div class="w-12 h-12 bg-primary-500 rounded-lg flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-2-13h4v2h-4zm0 4h4v6h-4z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-lg font-bold text-gray-900">Arte Entre</h1>
            <p class="text-sm text-gray-600">Puntadas</p>
          </div>
        </div>

        <!-- Navegaci칩n -->
        <nav class="space-y-2">
          <a 
            href="/app" 
            class="flex items-center gap-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-primary-50 hover:text-primary-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
            </svg>
            <span class="font-medium">Calculadora</span>
          </a>
          
          <a 
            href="/app/inventario" 
            class="flex items-center gap-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-primary-50 hover:text-primary-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"/>
            </svg>
            <span class="font-medium">Inventario</span>
          </a>
          
          <a 
            href="/app/proyectos" 
            class="flex items-center gap-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-primary-50 hover:text-primary-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm9.707 5.707a1 1 0 00-1.414-1.414L9 12.586l-1.293-1.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="font-medium">Proyectos</span>
          </a>
          
          <a 
            href="/app/reportes" 
            class="flex items-center gap-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-primary-50 hover:text-primary-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"/>
            </svg>
            <span class="font-medium">Reportes</span>
          </a>
        </nav>
      </div>

      <!-- Usuario y Logout -->
      <div class="absolute bottom-0 w-64 p-6 border-t border-gray-200 bg-white">
        <div class="flex items-center gap-3 mb-3">
          <div class="w-10 h-10 bg-primary-200 rounded-full flex items-center justify-center">
            <span class="text-primary-700 font-semibold">
              {usuario?.nombre?.charAt(0) || usuario?.email?.charAt(0) || 'U'}
            </span>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-gray-900 truncate">
              {usuario?.nombre || 'Usuario'}
            </p>
            <p class="text-xs text-gray-500 truncate">
              {usuario?.email}
            </p>
          </div>
        </div>
        <a 
          href="/auth/logout"
          class="block w-full px-4 py-2 text-sm text-center text-red-600 hover:bg-red-50 rounded-lg transition-colors"
        >
          Cerrar Sesi칩n
        </a>
      </div>
    </aside>

    <!-- Contenido Principal -->
    <main class="flex-1 overflow-y-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </div>
    </main>
  </div>
</BaseLayout>
