---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import CalculadoraForm from '../../components/calculadora/CalculadoraForm.tsx';
---

<DashboardLayout title="Calculadora - Arte Entre Puntadas">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
        <img src="/logo.svg" alt="Logo" class="w-10 h-10" />
        Calculadora de Precios
      </h1>
      <p class="mt-2 text-gray-600">
        Calcula el precio justo de tu amigurumi considerando todos los costos
      </p>
    </div>

    <!-- Calculadora Component -->
    <CalculadoraForm client:load />
  </div>
</DashboardLayout>
