---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar';
import HeroCalculadora from '../../components/app/HeroCalculadora';
import CaracteristicasCalculadora from '../../components/app/CaracteristicasCalculadora';
import CTACalculadora from '../../components/app/CTACalculadora';
export const prerender = false;
---

<BaseLayout title="Calculadora de Amigurumis - Arte Entre Puntadas">
  <Navbar client:load />

  <!-- Hero Section -->
  <HeroCalculadora client:load />

  <!-- Features Section -->
  <CaracteristicasCalculadora client:load />

  <!-- CTA Section -->
  <CTACalculadora client:load />

  <!-- Footer -->
  <footer class="bg-gradient-to-b from-purple-100 to-pink-100 border-t-2 border-pink-200">
    <div class="max-w-7xl mx-auto px-6 py-12">
      <div class="text-center text-purple-700">
        <p class="mb-4 text-lg">Â© {new Date().getFullYear()} <span class="gradient-text font-semibold">Arte Entre Puntadas</span></p>
        <p class="text-sm text-purple-600">Calculadora profesional para amigurumis</p>
        <div class="mt-6 flex justify-center space-x-6">
          <a href="/app/calculadora" class="text-purple-600 hover:text-pink-500 transition-colors font-medium">Calculadora</a>
          <a href="/app/inventario" class="text-purple-600 hover:text-pink-500 transition-colors font-medium">Inventario</a>
          <a href="/app/proyectos" class="text-purple-600 hover:text-pink-500 transition-colors font-medium">Proyectos</a>
          <a href="/app/reportes" class="text-purple-600 hover:text-pink-500 transition-colors font-medium">Reportes</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Estilos para animaciones -->
  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }

    @keyframes fade-in-up {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-float {
      animation: float 6s ease-in-out infinite;
    }

    .animation-delay-400 {
      animation-delay: 400ms;
    }

    .animate-fade-in-up {
      animation: fade-in-up 0.6s ease-out;
    }

    .animation-delay-200 {
      animation-delay: 200ms;
      animation-fill-mode: both;
    }

    .animation-delay-400 {
      animation-delay: 400ms;
      animation-fill-mode: both;
    }

    .section-title {
      @apply text-4xl md:text-5xl font-display font-bold;
    }

    .shadow-glow {
      box-shadow: 0 0 20px currentColor;
    }
  </style>
</BaseLayout>
