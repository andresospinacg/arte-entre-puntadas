---
// Hacer que esta p√°gina sea server-rendered para acceder a cookies
export const prerender = false;

// Redirigir si ya est√° autenticado
import { supabase } from '../lib/supabase';

// Si ya hay una sesi√≥n, redirigir al home
if (Astro.cookies.has('sb-access-token')) {
  return Astro.redirect('/');
}
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Iniciar Sesi√≥n - Arte Entre Puntadas</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body class="bg-gradient-to-br from-dark-950 via-dark-900 to-dark-950 min-h-screen">
  
  <!-- Bot√≥n de volver al inicio (flotante) -->
  <a 
    href="/" 
    class="fixed top-6 left-6 z-50 flex items-center space-x-2 px-4 py-2 bg-dark-800/80 hover:bg-dark-700 backdrop-blur-sm border border-dark-600 rounded-lg text-white transition-all duration-200 hover:border-primary-400 group"
  >
    <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    <span class="font-medium">Volver al inicio</span>
  </a>

  <div class="min-h-screen flex items-center justify-center p-4">
    <!-- Card de Login flotante -->
    <div class="max-w-md w-full relative">
      <!-- Efecto de brillo de fondo -->
      <div class="absolute inset-0 bg-gradient-to-r from-primary-400/20 to-accent-400/20 blur-3xl rounded-3xl"></div>
      
      <!-- Contenido -->
      <div class="relative">
        <!-- Logo y T√≠tulo -->
        <div class="text-center mb-8">
          <div class="flex justify-center mb-6">
            <div class="relative">
              <div class="absolute inset-0 bg-primary-400/30 blur-xl rounded-full animate-pulse"></div>
              <img 
                src="/logo_arte_entrepuntadas.png" 
                alt="Arte Entre Puntadas" 
                class="relative w-28 h-28 rounded-2xl shadow-2xl ring-4 ring-primary-400/50"
              />
            </div>
          </div>
          <h1 class="text-4xl font-display font-bold text-white mb-3">
            <span class="gradient-text">Arte Entre Puntadas</span>
          </h1>
          <p class="text-gray-400 text-lg">
            Calculadora de Proyectos de Amigurumis
          </p>
        </div>

        <!-- Card de Login -->
        <div class="card-hover bg-dark-800/90 backdrop-blur-xl border-2 border-dark-700">
          <h2 class="text-2xl font-bold text-white mb-6 text-center">
            Iniciar Sesi√≥n
          </h2>

          <!-- Bot√≥n de Google -->
          <button
            id="google-signin"
            class="w-full bg-white hover:bg-gray-100 text-gray-900 font-semibold py-4 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-3 shadow-lg hover:shadow-2xl hover:scale-[1.02] active:scale-[0.98]"
          >
            <svg class="w-6 h-6" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span>Continuar con Google</span>
          </button>

          <!-- Mensaje de error -->
          <div id="error-message" class="hidden mt-4 p-4 bg-red-500/10 border border-red-500/30 rounded-lg text-red-400 text-sm flex items-start space-x-2">
            <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <span></span>
          </div>

          <!-- Info adicional -->
          <p class="text-gray-500 text-sm text-center mt-6">
            Al iniciar sesi√≥n, aceptas nuestros t√©rminos y condiciones
          </p>
        </div>

        <!-- Caracter√≠sticas de la app -->
        <div class="mt-8 grid grid-cols-3 gap-4 text-center">
          <div class="bg-dark-800/50 backdrop-blur-sm border border-dark-700 rounded-lg p-4 hover:border-primary-400/50 transition-colors">
            <div class="text-2xl mb-2">‚ú®</div>
            <p class="text-gray-400 text-xs">Gestiona proyectos</p>
          </div>
          <div class="bg-dark-800/50 backdrop-blur-sm border border-dark-700 rounded-lg p-4 hover:border-primary-400/50 transition-colors">
            <div class="text-2xl mb-2">üìä</div>
            <p class="text-gray-400 text-xs">Calcula costos</p>
          </div>
          <div class="bg-dark-800/50 backdrop-blur-sm border border-dark-700 rounded-lg p-4 hover:border-primary-400/50 transition-colors">
            <div class="text-2xl mb-2">üíæ</div>
            <p class="text-gray-400 text-xs">Nube segura</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { iniciarSesionConGoogle } from '../lib/supabase';

    const botonGoogle = document.getElementById('google-signin') as HTMLButtonElement;
    const errorDiv = document.getElementById('error-message');

    botonGoogle?.addEventListener('click', async () => {
      try {
        // Deshabilitar bot√≥n
        botonGoogle.disabled = true;
        botonGoogle.innerHTML = `
          <svg class="animate-spin h-6 w-6 text-gray-900" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span>Conectando con Google...</span>
        `;

        // Ocultar error previo
        errorDiv?.classList.add('hidden');

        // Iniciar sesi√≥n
        await iniciarSesionConGoogle();
        
      } catch (error) {
        console.error('Error al iniciar sesi√≥n:', error);
        
        // Mostrar error
        if (errorDiv) {
          const errorSpan = errorDiv.querySelector('span');
          if (errorSpan) {
            errorSpan.textContent = 'Error al iniciar sesi√≥n. Por favor, intenta nuevamente.';
          }
          errorDiv.classList.remove('hidden');
        }

        // Restaurar bot√≥n
        botonGoogle.disabled = false;
        botonGoogle.innerHTML = `
          <svg class="w-6 h-6" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          <span>Continuar con Google</span>
        `;
      }
    });
  </script>
</body>
</html>
