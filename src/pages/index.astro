---
import BaseLayout from '../layouts/BaseLayout.astro';
import NavbarPublico from '../components/NavbarPublico';
import Hero from '../components/public/Hero';
import GaleriaProductos from '../components/public/GaleriaProductos';
import Beneficios from '../components/public/Beneficios';
import ContactoCTA from '../components/public/ContactoCTA';
import Footer from '../components/public/Footer';
---

<BaseLayout 
  title="Arte Entre Puntadas - Amigurumis Personalizados"
  description="Creamos amigurumis únicos y personalizados con amor desde Ibagué, Colombia. Cada puntada cuenta una historia especial."
>
  <!-- Navbar Público -->
  <NavbarPublico client:load />
  
  <!-- Hero Section -->
  <Hero client:load />

  <!-- Galería de Productos -->
  <GaleriaProductos client:load />

  <!-- Beneficios -->
  <Beneficios client:load />

  <!-- CTA de Contacto -->
  <ContactoCTA client:load />

  <!-- Footer -->
  <Footer client:load />
</BaseLayout>

